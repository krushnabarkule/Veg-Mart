<!doctype html>
<html lang="en">

<head>

    {{>links}}

    <title>विठ्ठला</title>
</head>

<body>

    <div class="container-fluid mt-4">
        <div class="row">
            {{>navbar}}
        </div>

        <div class="row signup p-4 my-5">
            <div class="col-md-12 mx-auto register">
                <div>
                    <h1 class="signup-heading"> Contact Form </h1>
                    <form action="/contact" method="POST">
                        <div class="row">
                            <div class="col-md-6 mx-auto input-field">
                                <div class="input-group mb-4">
                                    <i class="fas fa-user"></i>
                                    <input type="text" class="form-control" placeholder=" Enter Name *"
                                        name="name" required>
                                </div>
                                <div class="input-group mb-4">
                                    <i class="fas fa-mobile"></i>
                                    <input type="text" class="form-control" placeholder=" Enter Phone no. *"
                                        name="phone" required>
                                </div>
                                <div class="input-group mb-4">
                                    <i class="fas fa-street-view"></i>
                                    <input type="text" class="form-control" placeholder=" Enter address *"
                                        name="address" required>
                                </div>
                                <div class="input-group mb-4 textarea">
                                    <i class="fas fa-question-circle"></i>
                                    <textarea class="form-control" id="exampleFormControlTextarea1"
                                        placeholder="Your Queries" name="queries"rows="3"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary w-md-75">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    

    {{>footer}}

</body>

</html>